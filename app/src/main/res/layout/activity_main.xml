            app:layout_constraintEnd_toStartOf="@+id/settingsButton" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TÄ™tno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="166dp" android:layout_marginStart="166dp"
